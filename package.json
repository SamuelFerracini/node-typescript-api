{
  "name": "node-typescript-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/SamuelFerracini/node-typescript-api.git",
  "author": "Samuel Ferracini <samuel.ferracini@becompliance.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev --transpile-only src/index.ts | pino-pretty -c",
    "test": "yarn test:unit && yarn test:functional",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "test:unit": "jest",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@types/express": "^4.17.13",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.1",
    "config": "^3.3.6",
    "express": "^4.17.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.1.4",
    "pino": "^8.11.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.40",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "16",
    "@types/pino": "^7.0.5",
    "@types/pino-pretty": "^5.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "jest": "^27.4.5",
    "nock": "^13.2.1",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
